<%= form_for(@game) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Enter the name of the game..." %>

    <%= f.label :description%>
    <%= f.text_area :description, placeholder: "Enter a short description of the game..." %>
  </div>
  <%= f.submit "Add game", class: "btn btn-primary" %>
<% end %>