<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user info">
            <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>
            </h1>
            <p>Joined: <%= @user.created_at.month %>/<%= @user.created_at.day %>/<%= @user.created_at.year %>
        </section>
    </aside>
</div>